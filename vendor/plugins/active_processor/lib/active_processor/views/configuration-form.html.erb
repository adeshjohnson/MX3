<form action='<%= post_to %>' method='post'>
  <% for engine, gateways in @gateways %>
    <% for gateway, fields in gateways %>
      <% fields.each_field_for(:config) do |name, options| %>
        <%= FormHelper.label(engine, gateway, name, options) %>
        <%= FormHelper.input(fields, name, options) %>
      <% end %>
    <% end %>
  <% end %>
</form>
