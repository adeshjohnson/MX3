        <option value="<%= ivr.id %>" <%= "selected" if @dp and ivr.id.to_i == @dp.data7.to_i %>><%= ivr.name %></option>  
      <% end %>
      </select>
    </td>
  </tr>
  <tr>
    <th><%= _("Timeperiod") %></th>
