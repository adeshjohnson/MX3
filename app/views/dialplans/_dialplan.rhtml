      <select name="dialplan[data1]">
        <option value=""></option>
      <% for period in @timeperiods do%>
        <option value="<%= period.id %>" <%= "selected" if @dp and period.id.to_i == @dp.data1.to_i %>><%= period.name %></option>  
      <% end %>
      </select>
    </td>
    <td>
      <select name="dialplan[data3]">
        <option value=""></option>
