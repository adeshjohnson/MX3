<table class = "maintable">
  <tr>
    <th><%= _("Name") %></th>
    <td colspan="<%= @create || @update ? "3" : "4" %>"><%= text_field 'dialplan', 'name', "class" => "input" , :size => "30", :maxlength => "255" %></td>
    <% if @create %><td align="center"><%= image_submit_tag 'icons/add.png',  :title => _('Add' ), :id=>"ivr_add" %></td><% end %>
    <% if @update %><td align="center"><%= image_submit_tag 'icons/edit.png', :title => _('Edit'), :id=>"ivr_edit" %></td><% end %>
  </tr>
  <tr> 
    <th></th>
    <th><%= _("Ivr") %>: 1</th>
    <th><%= _("Ivr") %>: 2</th>
    <th><%= _("Ivr") %>: 3</th>
    <th><%= _("Ivr") %>: <%= _("Default") %></th>
  </tr>

  <tr>
    <th><%= _("Ivr") %></th>
    <td>
      <select name="dialplan[data2]">
      <option value=""></option>
      <% for ivr in @ivrs do%>
        <option value="<%= ivr.id %>" <%= "selected" if @dp and ivr.id.to_i == @dp.data2.to_i %> ><%= ivr.name %></option>  
      <% end %>
      </select>
    </td>
    <td>
      <select name="dialplan[data4]">
      <option value=""></option>
