<tr class='slide'>
  <td colspan='10'>
    <% form_for :url => {:controller => "callshop", :action => "topup_balance", :id => params[:id], :format => "json"} do |form| %>
        <table cellpadding="0" cellspacing="0" class="invoice">
          <tr>
            <td style="width: 30%">
              <label for="balance"><%= _('Change_balance_by') %> (<%= @currency %>)</label>
            </td>
            <td>
            <span style="display: none" class="increase-balance">
              <label for=""><%= _('Are_you_sure_that_you_want_to') %>
                <span class="green"><strong><%= _('Increase') %></strong></span> <%= _('Users_balance') %>?</label>
            </span>
            <span style="display: none" class="decrease-balance">
              <label for=""><%= _('Are_you_sure_that_you_want_to') %>
                <span class="red"><strong><%= _('Decrease') %></strong></span> <%= _('Users_balance') %>?</label>
            </span>
            </td>
          </tr>
          <tr>
            <td style="width: 30%" colspan="2">
              <input class="hidden" type="hidden" value="<%= 1 %>" name="add_with_tax_new"/>
            </td>
          </tr>
          <tr>
            <td style="width: 30%">
            <span class='field-wrap' style="width: 150px">
              <input type="text" value="1.0" name="invoice[balance]" class="balance" size="10"/>
            </span>
            </td>
            <td valign="top">
            <span style="display: none" class="increase-balance">
              <%= _('You_are_trying_to') %> <%= _('Add') %>
              <span class="green addition"></span> <%= @currency %> <%= _('to') %>
              <span class="booth-num"></span> <%= _('Booth_clients_balance') %>.<br/>
              <strong><%= _('After_this_operation_users_balance_will_be') %> <span class="total green"></span>.</strong>
            </span>
            <span style="display: none" class="decrease-balance">
              <%= _('You_are_trying_to') %> <%= _('Decrease') %>
              <span class="red addition"></span> <%= @currency %> <%= _('From').downcase %>
              <span class="booth-num"></span> <%= _('Booth_clients_balance') %>.<br/>
              <strong><%= _('After_this_operation_users_balance_will_be') %> <span class="red total"></span>.</strong>
            </span>
            </td>
          </tr>
          <tr>
            <td style="width: 30%">
              <input type="button" value="Increase" class="increase"/> &nbsp;
              <input type="button" value="Decrease" class="decrease"/>
            </td>
            <td>
            <span style="display: none" class="increase-balance">
              <input type="button" value="Confirm" class="adjust-balance"/>
            </span>
            <span style="display: none" class="decrease-balance">
              <input type="button" value="Confirm" class="adjust-balance"/>
            </span>
              <input type="hidden" value="<%= @invoice.id %>" name="invoice_id" id="invoice_id"/>
              <% if @invoice.tax %>
                  <input type="hidden" value="<%= @invoice.tax.tax1_value %>" name="invoice_tax_1" id="invoice_tax_1"/>
                  <input type="hidden" value="<%= @invoice.tax.tax2_value %>" name="invoice_tax_2" id="invoice_tax_2"/>
                  <input type="hidden" value="<%= @invoice.tax.tax3_value %>" name="invoice_tax_3" id="invoice_tax_3"/>
                  <input type="hidden" value="<%= @invoice.tax.tax4_value %>" name="invoice_tax_4" id="invoice_tax_4"/>
                  <input type="hidden" value="<%= @invoice.tax.compound_tax %>" name="compound_tax" id="compound_tax"/>
              <% end %>
            </td>
          </tr>
        </table>
    <% end %>
  </td>
</tr>