body { 
  font-family: Verdana, Tahoma, Arial, Helvetica, sans-serif; 
/*  font: bold smaller sans-serif;  */ 
  background-color: <%= @background_color %>;  
/*  background: white right bottom url("../images/logo/kolmisoft.jpg");*/
  background-repeat: no-repeat;
  background-attachment: fixed;
  
  margin:0;padding:0;
}


/* TEXT
------------------------------------*/

.bold_green {
	color: <%= @usual_text_font_color %>;
	text-decoration: <%= @usual_text_font_style1 %>;
    font-family: Verdana, Arial, Helvetica, sans-serif;
	font-size:<%= @usual_text_font_size %>;
/*	margin-left: 1px;	*/
	font-weight:<%= @usual_text_font_style3 %>;
        font-style:<%= @usual_text_font_style2 %>;
        	 
}

.bold_red {
	color: #E81818;
	text-decoration: <%= @usual_text_font_style1 %>;
    font-family: Verdana, Arial, Helvetica, sans-serif;
	font-size: 10px;
/*	margin-left: 1px;	*/
	font-weight:<%= @usual_text_font_style3 %>;
        font-style:<%= @usual_text_font_style2 %>;
}

/* TABLES
----------------------------------------------- */

.simple 
{ 
    font-size: <%=@usual_text_highlighted_text_size %>
    color: 	<%=@usual_text_highlighted_text_color %>; 
} 

.simple a {
	color: <%=@usual_text_highlighted_text_color %>; 
	text-decoration: none;
    font-family: Verdana, Arial, Helvetica, sans-serif;
	font-size: <%= @usual_text_highlighted_text_size %>;   
	margin-left: 3px;	
}
.simple a:hover {
	color:<%=@usual_text_highlighted_text_color %>; 
	background-color: <%= @first_3_rows_color %>;
	text-decoration: none;
}
.simple a img {
	border: 0px solid;
}



.top_border 
{ 
    border-top: 1px black solid; 
    padding: 4px; 
    font-size:<%= @usual_text_highlighted_text_size %>;   
} 

.bottom_border 
{ 
    border-bottom: 1px black solid; 
    padding: 4px; 
    font-size: 10px;
} 

/* ##### foter - header ##### */
.page_title {
    text-decoration: <%= @header_footer_font_style1 %>;
    font-family: Verdana, Tahoma, Arial, Helvetica, sans-serif;   
    background: white url("../images/design/background3.jpg"); 
    color: <%= @header_footer_font_color%>; 
    font-size: <%=@header_footer_font_size   %>; 
    font-weight: <%= @header_footer_font_style3%>; 
     font-style: <%= @header_footer_font_style2%>;
}

.maintable, .infotable {
	border-collapse: collapse;
}

.maintable tr:hover {
	background-color: <%= @first_3_rows_color %>;
}

tr.row1 {
	background-color: <%= @row1_color %>;  
}
tr.row2 {
	background-color: <%=  @row2_color %>;  
}
tr.red {
	background-color: #FF3939;
}
tr.yellow {
	background-color: #FDFEA4;
}

.bordered{
	border: 1px solid #D4D0C8;
}

.maintable td.n_disabled {
	color: #BBBBBB;
}
tr.sel {
	background-color: <%= @first_3_rows_color %>;
}

.maintable th, .maintable td {
	border: 1px solid #D4D0C8;
        
}

/* ##### table ##### */
.maintable th {
    text-decoration: <%=@usual_text_highlighted_text_style1 %>;
    background: white url("../images/design/background6.jpg");
    color: <%=  @usual_text_highlighted_text_color %>;
    font-size: <%= @usual_text_highlighted_text_size %>;
font-weight: <%= @usual_text_highlighted_text_style3%>; 
     font-style: <%= @usual_text_highlighted_text_style2%>;
}

.maintable th.catname {
	padding-top: 1em;
	background-color: #fff;
	border: 0;
}
/* ##### table text ##### */
.maintable td {
 text-decoration: <%= @usual_text_font_style1 %>;
  font-family: Verdana, Arial, Helvetica, sans-serif;
  color: <%= @usual_text_font_color %>;
  font-size: <%=  @usual_text_font_size %>;
  font-weight: <%= @usual_text_font_style3%>; 
     font-style: <%= @usual_text_font_style2%>;
 
}

.maintable td.red {
  color: #FF0000;
  font-weight: bold;  
  font-size: <%=  @usual_text_font_size %>;
}

.maintable td.black {
   color: #000000;
  font-size: <%=  @usual_text_font_size %>;
}

.nb {
  font-size: 11px;
  font-weight: normal;
}



.maintable img.ir {
	float: right;
	margin: .3em .2em 0 0;
}

.maintable .r, .maintable .g, .maintable .b {
	text-align: right;
}

.maintable a, .infotable a, #navbar a, #status a {
	text-decoration: none;
}

.maintable a:hover, .infotable a:hover, #navbar a:hover, #status a:hover {
	text-decoration: none;
}

.infotable th, .infotable td {
	border: 1px solid #ccc;
}

.infotable th {
	text-align: left;
	background-color: #eee;
}

.infotable img {
	vertical-align: middle;
}

td.n_disabled {
	color: #BBBBBB;
}

/* LINKS 
------------------------------------*/

a {
	color: #000000;
	text-decoration: none;
    font-family: Verdana, Arial, Helvetica, sans-serif;
	font-size: 11px;
/*	margin-left: 1px;	*/
/*	font-weight: bold;	 */
}
a:hover {
	color: #FFFFFF;
	background-color: #AA0000;
	text-decoration: none;
}
a img {
	border: 0px solid;
}


/* PAGE ELEMENTS 
----------------------------------------------*/

.input {
    font-family:        Verdana, Geneva, sans-serif;
    font-size: 10px;
    color: #000000;
    background-color: #FFFFFF;
    border:solid 1px #d0d0d0;

}

input {
	font-family: Verdana, Arial, Helvetica, sans-serif;
	font-size: 10px;
}

select {
	font-family: Verdana, Arial, Helvetica, sans-serif;
	font-size: 10px;
}

textarea {
	font-family: Verdana, Arial, Helvetica, sans-serif;
	font-size: 10px;
}

/* NOTICE 
------------------------------------------------------*/

#notice {
/*    border: 2px solid red;*/
    padding: 0.7em;
    margin-bottom: 1em;
    background-color: #D62131;
    background: white url("../images/design/background4.jpg");
    font: bold smaller sans-serif;
    font-size: 13px;
    color: #FFFFFF;
}

/* ERROR
------------------------------------------------------*/

