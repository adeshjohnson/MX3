    <td align="left">   <%= text_field_tag 'description', @qfdid.description, "class" => "input", :size => "50", :maxlength => "100"   %>      </td>
    <td align="center">   <%= image_submit_tag 'icons/check.png', :title => _('Update') %>      </td>        
 </tr>
 <% end %>
