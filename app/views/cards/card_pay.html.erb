<b><%= _('Card_group') %> </b> : <%= @cg.name %>
<br>
<b><br><%= _('Card') %></b> : <%= @card.number %>
<br>
<br>
<% if @card.sold == 1 %>
    <%= form_tag :action => 'card_payment_status', :cg => @cg.id, :id => @card do %>
        <table class="maintable" width="100%">
          <tr>
            <th align="left"><%= _('Fill_Card_Balance') %> </th>
          </tr>
          <tr class="row1">
            <td>
              <br>
              <br>
              <table>
                <tr>
                  <td><b><%= b_money + _('Amount_with_VAT') %></b>:</td>
                  <td><%= text_field_tag 'amount', "", "class" => "input", :size => "10", :maxlength => "10" %></td>
                </tr>
                <tr>
                  <td><b><%= b_currency + _('Currency') %></b>:</td>
                  <td>              <select name="currency">
                    <% for curr in @currs %>
                        <option value="<%= curr.name %>"><%= curr.name %></option>
                    <% end %>
                  </select></td>
                </tr>
                <tr>
                  <td><b><%= _('Description') %></b>:</td>
                  <td><%= text_area_tag('description', '', "class" => "input", :cols => "32", :rows => "4") %></td>
                </tr>
              </table>
          <br>
          <br>
              <%= submit_tag _('Proceed'), :disable_with => _('Processing..') %>
              <br>
              <br>
            </td>
          </tr>
        </table>
    <% end %>
<% end %>

<% if @card.sold == 0 %>
    <%= form_tag :action => 'card_buy', :cg => @cg.id, :id => @card do %>
        <br>
        <br>
        <table class="maintable" width="100%">
          <tr>
            <th align="left"><%= _('Buy_Card') %> </th>
          </tr>
          <tr class="row1">
            <td>

              <br>
              <br>
              <table>
                <tr>
                  <td><b><%= _('Description') %></b>:</td>
                  <td><%= text_area_tag('description', '', "class" => "input", :cols => "32", :rows => "4") %></td>
                </tr>
              </table>
              <br>
              <br>
              <%= submit_tag _('Buy'), :disable_with => _('Processing..') %>
              <br>
              <br>
            </td>
          </tr>
        </table>
    <% end %>
<% end %>
<br>
<br>
