<table width="100%" class="maintable">
  <tr>
    <th><%=_('User')%></th>
    <th></th>
  </tr>
  <%if @users_postpaid_and_loss_calls and @users_postpaid_and_loss_calls.size.to_i > 0%>
    <% @users_postpaid_and_loss_calls.each_with_index{ |user, i| %>
      <% user.blocked.to_i == 0 ? text_class="n" : text_class="n_disabled" -%>
      <tr class="row<%= (i % 2 + 1).to_s %>">
        <td id="user_link_<%= user.id %>" align="left" class="<%= text_class %>" <%= nice_user_tooltip(user)%> > <%= @allow_write ? link_nice_user(user) : nice_user(user) %> <% if admin? and user.owner_id != 0 %> (<%= _('resellers_user') %>)<%end%></td>
        <td id="edit_<%= user.id %>" align="center" class="<%= text_class %>"><% if admin? and user.owner_id == 0 %>  <%= link_to b_edit , :action=>:edit, :id=>user.id %> <% end %></td>
      </tr>
    <% } %>
  <%end%>
</table>