<br><br><br>

<% if @WDFD %>

    <table class='simple' width="100%">
      <tr>
        <td><b><%= _('Rate_details_for_WDFD') %>:</b></td>
        <td align="right"> <%= link_to b_check + _('Split_to_WDFD'), :action => 'ard_manage', :id => @rate.id, :rdaction => "SPLIT" %></td>
      </tr>
    </table>

