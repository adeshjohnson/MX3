        <th><%= _('Start_Time') %></th>
        <th><%= _('End_Time') %></th>
        <th align="center"><%= _('Details') %></th>
        <th></th>
      </tr>


      <% i = 0 %>
      <% for t in @st_arr %>
          <%= form_tag :action => 'user_ard_time_edit', :id => @rate, :daytype => "" do %>
              <tr class="row<%= (i % 2 + 1).to_s %>">
                <td align="center"><%= t %></td>
                <td align="center">

                  <%= hidden_field_tag 'st', t %>
                  <%= hidden_field_tag 'dt', "" %>
                  <%= @et_arr[i] if @et_arr[i] != "23:59:59" %>
                  <%= select_time(Time.mktime('2000', '01', '01', '23', '59', '59'), :include_seconds => true) if @et_arr[i] == "23:59:59" %>
                  <%= image_submit_tag 'icons/edit.png' if @et_arr[i] == "23:59:59" %>
                </td>
                <td align="center"><%= link_to b_view, :action => 'user_acustrates', :id => @rate, :st => t, :dt => "" %></td>


                <td align="center"><%= link_to b_delete, {:action => 'artg_destroy', :id => @rate, :st => t, :dt => ""}, :confirm => _('Are_you_sure'), :method => :post if @et_arr[i] == "23:59:59" and i>0 %></td>
              </tr>
          <% end %>
          <% i += 1 %>
      <% end %>


    </table>

